    "properties": {
    "event_type": {
        "type": "string"
    },
    "content_type": {
        "type": "string"
    },
    "action": {
        "type": "string"
    },
    "kwargs": {
        "type": "object",
        "properties": {
        "role": {
            "type": "number"
        },
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "public_id": {
            "type": "string"
        },
        "status": {
            "type": "number"
        },
        "description": {
            "type": "string"
        },
        "user_public_id": {
            "type": "string"
        }
        },
